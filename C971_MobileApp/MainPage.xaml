<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971_MobileApp.MainPage"
             Title="">

    <VerticalStackLayout
        Padding="10"
        Spacing="10">
        
        <!-- Title Bar -->
        <Label
            Text="Academic Terms"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            VerticalOptions="Start"/>
        
        <!-- Add Term Button -->
        <Button
            Text="Add a Term +"
            FontSize="18"
            HorizontalOptions="Fill"
            VerticalOptions="Start"
            Clicked="OnAddTermClicked"/>
        
        <!-- Scrollable List of Terms -->
        <ScrollView
            BackgroundColor="{StaticResource NeutralLightGray}">
            <VerticalStackLayout
                x:Name="TermListContainer"
                Spacing="10"
                Padding="0,10">
                <!-- Individual Term Cards will be dynamically added here -->
            </VerticalStackLayout>
        </ScrollView>
        
    </VerticalStackLayout>

</ContentPage>
